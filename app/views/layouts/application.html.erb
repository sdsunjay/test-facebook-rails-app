<!DOCTYPE html>
<html>
<head>
  <title>Facebook Test App</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
    <div class="navbar navbar-default" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/"><h1>Facebook Test App</h1></a>
        </div>
        <div class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
              <li class="<%= params[:controller] == 'welcome' ? 'active' : ''%>"><%= link_to 'Home', root_path %></li>
	      <% if user_signed_in? %>
                 <li><%= link_to "My Rides", current_user%></li> 
        	 <li><%= link_to "Logout", destroy_user_session_path, :method => :delete %></li>	
        	<% else %>
        	   <li><%= link_to "Sign Up", new_user_registration_path %></li>
        	<% end %>
          </ul>
		<% if false %>
                	<%= render 'partials/search' %>
		<% end %>
	  </div><!--/.nav-collapse -->
      </div>
    </div>

    <section>
    <div class="container">
        <div class="row">
            <div class="col-md-8">
              <% if flash[:notice] %>
                  <div class="alert alert-success"><%= flash[:notice] %></div>
              <% end %>
              <% if flash[:alert] %>
                  <div class="alert alert-danger"><%= flash[:alert] %></div>
              <% end %>
                <%= yield %>
            </div>
            <div class="col-md-4">
		<% if false %>
                <%= render 'partials/sidebar' %>
		<% end %>
            </div>
        </div>
    </div>
    </section>
                <%= render 'partials/footer' %>

</body>
</html>
